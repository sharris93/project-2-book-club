<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs') %> 

<head>
  <title><%= bookreview.bookName %> | The Bookish Review</title>
</head>
<body>
  <%- include('../partials/nav.ejs') %>
  
  <main class="show-bookreview" id="main-content">
    <div class="bookreview">
      <h1><%= bookreview.bookName %></h1>
      <p><%= bookreview.reviewText %></p>

      <% if (bookreview.reviewer) { %>
        <p>Written by: <%= bookreview.reviewer?.name || bookreview.reviewer?.email %></p>
      <% } %>

      <ul class="tags">
        <% bookreview.tags.forEach(tag => { %>
          <li><%= tag %></li>
        <% }) %>
      </ul>
    </div>
          <!-- Controls (Edit/Delete) -->
          <% if (user && bookreview.reviewer.equals(user._id)) { %>      
            <div class="controls">
          <a class="edit-btn" href="/bookreviews/<%= bookreview._id %>/edit">‚úçÔ∏è</a>
          <form action="/bookreviews/<%= bookreview._id %>?_method=DELETE" method="POST">
            <button class="delete-btn" type="submit">üóëÔ∏è</button>
          </form>
        </div>
      <% } %>
    </div>
  </main>
</body>
</html>
